<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
<!--  Tombol untuk berpindah activity  -->
    <Button
        android:id="@+id/buttonPindahActivity"
        android:text="Pindah Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--  Tombol untuk berpindah activity dengan data yang tersimpan  -->
    <Button
        android:id="@+id/buttonPindahActivityDenganData"
        android:text="Pindah Activity Dengan Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--  Tombol untuk berpindah activity dengan objeect  -->
    <Button
        android:id="@+id/buttonPindahActivityDenganObject"
        android:text="Pindah Activity Dengan Object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


<!--  Tombol untuk membuka dial telepon -->
    <Button
        android:id="@+id/buttonDialNumber"
        android:text="Dial A Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--  Tombol untuk membuka maps  -->
    <Button
        android:id="@+id/buttonMaps"
        android:text="Intent Maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--  Tombol untuk membuka menu share -->
    <Button
        android:id="@+id/buttonShare"
        android:text="Intent Share Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!-- Tombol untuk kirim sms -->
    <Button
        android:id="@+id/buttonSMS"
        android:text="Intent Kirim SMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--  Tombol untuk memilih kontak  -->
    <Button
        android:id="@+id/buttonGetContachPhone"
        android:text="Ambil Kontak Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--  Tombol untuk pindah ke Activity -->
    <Button
        android:id="@+id/buttonPindahActivityUntukResult"
        android:text="Pindah Activity Untuk Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--  View untuk menampilkan text yang diambil dari activity sebelumnya -->
    <TextView
        android:id="@+id/textViewResult"
        android:gravity="center"
        android:text="Hasil dari Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>